# Dialog script for nd_image automatically generated

{
    name	nd_image
    script	nd_image
    label	"Nd image"

    input	string	filename	Filename
    input	vector	offset	Offset
    input	vector4	missing_texture_color	"Missing Texture Color"
    input	vector2	uvcoords	uvcoords
    output	vector4	rgba	rgba
    output	float	r	r
    output	float	g	g
    output	float	b	b
    output	float	a	a
    inputflags	filename	0
    inputflags	offset	0
    inputflags	missing_texture_color	0
    inputflags	uvcoords	0
    signature	"Default Inputs"	default	{ string vector vector4 vector2 vector4 float float float float }

    outputoverrides	default
    {
	___begin	auto
			(0,0,0,0)
	___begin	auto
			(0)
	___begin	auto
			(0)
	___begin	auto
			(0)
	___begin	auto
			(0)
    }

    help {
	""
    }

    group {
        name    "folder1"
        label   "Texture"

        parm {
            name    "filename"
            label   "Filename"
            type    image
            joinnext
            default { "C:/Users/Administrator/Desktop/Capture.PNG" }
            help    "The path of the current location of the file texture map. The path can be relative to any directory of the ROP's texture searchpath or to the current working directory.\n\nThe filename can optionally contain the following tags:\n\n- <udim>: for Mari-style UDIM tiled textures.\n\n- <tile>: for Mudbox-style tiles where the tag is replaced with _uC_vR where C and R are the column and row of the tile, respectively.\n\n- <attr:name index:name default:value>: the tag will look for the named user data (as a string), the index and default tokens are optional. If the index is used, the UINT user data is found first, and the main attribute then must be an array of strings it indexes into. Among other techniques, this allows e.g. facesets, where you can list the faceset names once each in a constant array, and then have a uniform UINT assigned to each face specifying which faceset the face is a member of. Finally, the default, if present, is substituted if the user data cannot be found for any reason."
            parmtag { "autoscope" "0000000000000000" }
            parmtag { "script_callback_language" "python" }
        }
        parm {
            name    "reload"
            label   "Reload"
            type    button
            nolabel
            default { "0" }
            help    "Reload texture. This will regenerate TX textures and invalidate any texture cache in IPR."
            parmtag { "autoscope" "0000000000000000" }
            parmtag { "button_icon" "BUTTONS_reload" }
            parmtag { "script_callback_language" "python" }
        }
        parm {
            name    "multiply"
            label   "Multiply"
            type    color
            size    3
            default { "1" "1" "1" }
            help    "Multiplies the image by a constant. Useful for quickly adding a small amount of brightness."
            range   { 0 1 }
            parmtag { "autoscope" "0000000000000000" }
        }
        parm {
            name    "offset"
            label   "Offset"
            type    color
            size    3
            default { "0" "0" "0" }
            help    "Adds a constant to the image. Useful for quickly lifting the black level."
            range   { 0 1 }
            parmtag { "autoscope" "0000000000000000" }
        }
        parm {
            name    "color_family"
            label   "Color Space"
            type    string
            joinnext
            default { "" }
            help    "The colorspace family, used to filter the color spaces in the OCIO config file, including view/display color spaces if present."
            menu {
                [ "opmenu -l image1 color_family" ]
            }
            parmtag { "autoscope" "0000000000000000" }
        }
        parm {
            name    "color_space"
            label   "Color Space"
            type    string
            nolabel
            default { "auto" }
            help    "The colorspace to use for linearization when automatically generating .tx textures. When set to \"auto\", the colorspace will be guessed from the image properties: sRGB will be used for 16-bit or less integer images, and linear otherwise."
            menu {
                [ "opmenu -l image1 color_space" ]
            }
            parmtag { "autoscope" "0000000000000000" }
            parmtag { "script_callback_language" "python" }
        }
        parm {
            name    "filter"
            label   "Filter"
            type    string
            default { "smart_bicubic" }
            help    "Texel interpolation method used to filter the rendered image file. Cubic is slower but smoother, closest is faster but looks blocky when magnified."
            menu {
                "closest"       "Closest"
                "bilinear"      "Bilinear"
                "bicubic"       "Bicubic"
                "smart_bicubic" "Smart Bicubic"
            }
            parmtag { "autoscope" "0000000000000000" }
        }
        parm {
            name    "mipmap_bias"
            label   "Mipmap Bias"
            type    integer
            default { "0" }
            help    "Offsets the Mip-Map level from which a texture is sampled. Negative value indicates a larger Mip-Map level (bigger texture) resulting in sharper texture lookups; a positive value indicates a smaller Mip-Map level (smaller texture) which will produce a blurrier result."
            range   { -5 5 }
            parmtag { "autoscope" "0000000000000000" }
        }
        parm {
            name    "single_channel"
            label   "Single Channel"
            type    toggle
            joinnext
            default { "off" }
            help    "Use only a single channel of the texture. The values on the channels other than the first is undefined."
            parmtag { "autoscope" "0000000000000000" }
        }
        parm {
            name    "start_channel"
            label   "Single Channel"
            type    integer
            default { "0" }
            help    "When only a single channel is used, this defines an offset to the channel to read."
            disablewhen "{ single_channel == 0 }"
            range   { 0! 255! }
            parmtag { "autoscope" "0000000000000000" }
        }
        parm {
            name    "missing_texture_color"
            label   "Missing Texture Color"
            type    color4
            size    4
            default { "0" "0" "0" "0" }
            help    "The color to be displayed when a missing UDIM tile is encountered and ignore_missing_textures is set."
            disablewhen "{ ignore_missing_textures == 0 }"
            range   { 0 1 }
            parmtag { "autoscope" "0000000000000000" }
        }
        parm {
            name    "ignore_missing_textures"
            label   "Ignore Missing Texture Errors"
            type    toggle
            default { "off" }
            help    "Do not generate an error when a missing UDIM tile is encountered and display the missing_texture_color instead."
            parmtag { "autoscope" "0000000000000000" }
        }
        parm {
            name    "autotx"
            label   "Auto-generate TX Textures"
            type    toggle
            default { "on" }
            help    "Automatically generate corresponding tiled and mipmapped TX textures and use them instead of the image filename. The TX texture is linearized according to the colorspace."
            parmtag { "autoscope" "0000000000000000" }
            parmtag { "script_callback_language" "python" }
        }
    }

    group {
        name    "folder1_1"
        label   " UV "

        parm {
            name    "uvcoords"
            label   "Custom UVs"
            type    float
            size    2
            default { "0" "0" }
            help    "When this parameter is linked, its input will be used to lookup the texture instead of the object's UVs.\n\nWARNING: By specifying custom UV coordinates in this shader parameter, Arnold will sadly stop providing texture derivatives, which will absolutely destroy texture I/O performance: there won't be any mip-mapping at all."
            range   { 0 1 }
            parmtag { "autoscope" "0000000000000000" }
        }
        parm {
            name    "uvset"
            label   "UV Set"
            type    string
            default { "" }
            help    "An alternate UV set. It must be a float vertex attribute of size 2 and must be set for export in the Arnold properties of an object. If left blank, the standard uv attribute will be used."
            menureplace {
                ""      "Default	(uv)"
                "uv2"   "UV Set 2	uv2"
                "uv3"   "UV Set 3	uv3"
                "uv4"   "UV Set 4	uv4"
                "uv5"   "UV Set 5	uv5"
                "uv6"   "UV Set 6	uv6"
                "uv7"   "UV Set 7	uv7"
                "uv8"   "UV Set 8	uv8"
                "uv9"   "UV Set 9	uv9"
                "uv10"  "UV Set 10   	uv10"
            }
            parmtag { "autoscope" "0000000000000000" }
        }
        parm {
            name    "soffset"
            label   "Offset U"
            type    float
            default { "0" }
            help    "Offset the position of the texture in the U direction."
            range   { -1 1 }
            parmtag { "autoscope" "0000000000000000" }
        }
        parm {
            name    "toffset"
            label   "Offset V"
            type    float
            default { "0" }
            help    "Offset the position of the texture in the V direction."
            range   { -1 1 }
            parmtag { "autoscope" "0000000000000000" }
        }
        parm {
            name    "sscale"
            label   "Scale U"
            type    float
            default { "1" }
            help    "Scales the size of the texture"
            range   { 0 2 }
            parmtag { "autoscope" "0000000000000000" }
        }
        parm {
            name    "tscale"
            label   "Scale V"
            type    float
            default { "1" }
            help    "Scales the size of the texture"
            range   { 0 2 }
            parmtag { "autoscope" "0000000000000000" }
        }
        parm {
            name    "swrap"
            label   "Wrap U"
            type    string
            default { "periodic" }
            help    "Controls how a texture repeats on a large surface."
            menu {
                "periodic"  "Periodic"
                "black"     "Black"
                "clamp"     "Clamp"
                "mirror"    "Mirror"
                "file"      "File"
            }
            parmtag { "autoscope" "0000000000000000" }
        }
        parm {
            name    "twrap"
            label   "Wrap V"
            type    string
            default { "periodic" }
            help    "Controls how a texture repeats on a large surface."
            menu {
                "periodic"  "Periodic"
                "black"     "Black"
                "clamp"     "Clamp"
                "mirror"    "Mirror"
                "file"      "File"
            }
            parmtag { "autoscope" "0000000000000000" }
        }
        parm {
            name    "swap_st"
            label   "Swap U & V"
            type    toggle
            default { "off" }
            parmtag { "autoscope" "0000000000000000" }
        }
        parm {
            name    "sflip"
            label   "Flip U"
            type    toggle
            default { "off" }
            help    "Flips the texture in the U direction."
            parmtag { "autoscope" "0000000000000000" }
        }
        parm {
            name    "tflip"
            label   "Flip V"
            type    toggle
            default { "off" }
            help    "Flips the texture in the V direction."
            parmtag { "autoscope" "0000000000000000" }
        }
    }

}
